extends page-outline.pug

block content

  div.whiskey-profile-container
    h1= whiskeyName
    p.whiskey-profile-description= description

    a.back-to-search(href="/whiskey-search")
      |< Back

    a.redirect-to-whiskey-post(href="/post/" + _id)
      |Rate this Whiskey >

    - var smallPhoto = smallImageURL
    - var largePhoto = largeImageURL
    div.image-container
      if largePhoto == undefined
        img.whiskey-profile-image(src=largeImageURL)
      else
        img.whiskey-profile-image(src=smallImageURL)

  div.push
