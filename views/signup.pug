doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    title Whiskey Social Signup
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='../public/css/reset.css')
    link(rel='stylesheet', href='../public/css/grid.css')
    link(rel='stylesheet', href='../public/css/main.css')
    link(rel="shortcut icon" href="/public/images/wax-seal-logo.ico" type="image/x-icon")
    link(rel="icon" href="/public/images/wax-seal-logo.ico" type="image/x-icon")
  body
    header.header-signup
      ul.header-signup-menu-list
        li.header-signup-logo-box
          img.header-signup-logo(src='/public/images/wax-seal-logo.png', alt='wax seal logo')
      div.header-signup-text Whiskey Social

    div.main-content-wrapper
      div.logo-large
        img.logo(src='../public/images/wax-seal-logo.png', alt='wax seal logo')

      form#sign-up(method='POST' enctype='application/json' action='/signup')
        //- div
        //-   input#firstName(type='text', name='firstName', required='', placeholder=' ')
        //-   label(for='firstName') First Name
        //- div
        //-   input#lastName(type='text', name='lastName', required='', placeholder=' ')
        //-   label(for='lastName') Last Name
        div
          input#username(type='text', name='username', required='', placeholder=' ')
          label(for='username') Username
        //- div
        //-   input#email(type='email', name='email', required='', placeholder=' ')
        //-   label(for='email') Email Address
        //-   .requirements
        //-     | Must be a valid email address.
        div
          input#password(type='password', name='password', required='', placeholder=' ', pattern='(?=.*[a-z]).{10,}')
          label(for='password') Password
          .requirements
            | Your password must be at least 10 characters with at least one letter - case Sensitive.
        input(type='submit', value='Sign Up')

      div.login-bottom
        p
          | Already Have an Account?
          a(href='/login')   Log in here!

