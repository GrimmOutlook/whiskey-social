extends page-outline.pug

block content

  div.search-statement
    p Search for a whiskey:

  div.search-form
    form(action="whiskey-search")
      input.search-field(type="text" placeholder="Example: Redbreast" name="whiskey" required)
      input.search-button(type="submit" value="Search")

  p Results:

    if whiskeys && whiskeys.length
      each w in whiskeys
        a(href="/whiskey-profile/" + w._id)
          div.search-results
            h2= w.whiskeyName
            div.search-description
              p= w.description
            div.search-image
              img(src=w.smallImageURL)
        div.border-between
    else if message
      p= message
    else
      p No results found

