extends page-outline.pug

block content
  div= username
  div= name
  div Are you sure you want to delete your account?

  a(href="/user/" + id)
    button.redirect-to-profile(type='submit') No

  a(href="/user/" + id + "/delete-account")
    button.redirect-to-homepage(type='submit', formmethod="POST") Yes


  form(action="/user/" + id + "/delete-account", method="POST")
    label(for="eliminate") Yes, delete my account
    input(type="submit")



