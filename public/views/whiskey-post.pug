doctype html
html(lang="en")
  head
    title Whiskey Post Screen
  body
    h1 Whiskey Post Screen

    div= whiskeyName
    div= country
    div= region
    div= description

    form(method='POST' enctype='application/json' action="/whiskey/post/" + id)
      div.form-group
        label(for='comment') Comment:
        textarea#comment(rows=10, cols=100, type='text', placeholder='Comment on this whiskey' name='comment')
      div.form-group
        label(for='rating') Rating:
        - var ratings = [1,2,3,4,5];
          select
            each number in ratings
              option#rating(value=number.id, name='rating')= number
      button(type='submit') Add Comment and Rating

