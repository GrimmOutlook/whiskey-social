extends page-outline.pug

block content

  div.favorites-container
    h1 My Favorites:
    ul.favorites-list

      each post in favoritePosts
        - var photoURL = post.smallImageURL
        li.whiskey-card
          div.whiskeyname= post.whiskeyName
          div.rating= 'Rating: ' + post.rating
          div.favorite
            p Favorite
            img.favorite-icon
          a(href='/user/' + id + '/single-post/' + post.postID)
            img.bottle-history(src=photoURL, alt=post.whiskeyName)
      else
        p No favorites yet!
