extends page-outline.pug

block content
  div.single-post-container

    div.single-name
      h1= title

    div.single-photo
      img(src=image_url)

    div.single-rating
      h2= 'Rating: ' + rating

    //- TODO - edit comment button
    div.single-comment
      h2= 'Comments: ' + comment[0].text

    form.single-add-comment(action="POST")
      textarea(rows=10, cols=100 placeholder='Make another comment')

    div.delete-post
      a(href="/whiskey/post/" + id + "/confirm")
        button.delete-post(type='submit') Delete
