extends page-outline.pug

block content
  div.single-post-container

    div.single-name
      h1= title

    div.single-photo
      img(src=image_url)

    div.single-rating
      h2= 'Rating: ' + rating

    //- TODO - edit comment button
    div.single-comment
      h2= 'Comments: ' + comment[0].text

    div.single-add-comment
      form(method='POST' enctype='application/json' action="/whiskey/598786f0873d1cf2aa55467c/post/59930c0314ba7b8933046102")
        div.form-group
          label(for='comment') Comment:
          textarea#comment(rows=10, cols=40, type='text', placeholder='Comment on this whiskey' name='comment')
      button(type='submit') Add Comment and Rating

    div.delete-post
      a(href="/whiskey/post/" + id + "/confirm")
        button.delete-post(type='submit') Delete
