extends page-outline.pug

block content

  div.search-statement
    p Search for a whiskey:

  //- TODO - Look at Treehouse form  -  Probably not a POST - How do I make what's entered here into the query part of the URL???

  div.search-form
    form(action="search" placeholder='Search for a whiskey')
      input.search-field(type="text" placeholder="Search..." name="whiskey" required)
      input.search-button(type="submit" value="Search")

  p Results:

  if whiskeys
    each w in whiskeys
      a(href="/whiskey/profile/" + w._id)
        div.search-results
          h2= w.whiskeyName
          div.search-description
            p= w.description
          div.search-image
            img(src=w.smallImageURL)
      div.border-between
  else
    p No results found

