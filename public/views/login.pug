doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    title Login Screen
  body

    form(method='POST' action="/signup/me")
      div.form-group
        label(for='username') Username:
        input(type='text', name='username')
      div.form-group
        label(for='password') Password:
        input(type='text', name='password')
      button(type='submit') Log In
